{
  "include": ["src/**/*", "test/**/*", "types/**/*"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": [
      "long",
      "@waves/waveskeeper-types",
      "chrome",
      "firefox-webext-browser",
      "webpack/module"
    ]
  }
}
