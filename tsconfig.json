{
  "include": ["src/**/*", "test/**/*", "types/**/*"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": [
      "long",
      "@waves/waveskeeper-types",
      "chrome",
      "firefox-webext-browser"
    ]
  },
  "ts-node": {
    "transpileOnly": true
  }
}
