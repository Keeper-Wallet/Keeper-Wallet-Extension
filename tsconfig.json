{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "dom",
    ],
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./src"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
