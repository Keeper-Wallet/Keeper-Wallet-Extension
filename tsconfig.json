{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./src"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
