{
  "include": ["src/**/*", "test/**/*"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6",
    "types": [
      "long",
      "@waves/waveskeeper-types",
      "chrome",
      "firefox-webext-browser"
    ]
  }
}
