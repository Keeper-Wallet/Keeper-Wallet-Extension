{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
