.root
  overflow: auto;
  height: calc(100% - 48px);

.form
  margin: 84px 0;

.centered
  margin-right: 60px;
  margin-left: 60px;

.accountBox
  padding: 24px 60px;
  background: #f8f9fb;

.accountList
  display: flex;
  flex-direction: column;
  gap: 10px;

.accountListItem
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 14px;
  border-radius: 4px;
  box-shadow: 0 2px 4px rgba(155, 166, 178, 0.4);
  background: #FFFFFF;

.accountInfo
  display: flex;
  align-items: center;
  gap: 14px;

.accountInfoText
  display: flex;
  flex-direction: column;
  gap: 2px;

.accountName
  font-size: 12px;
  line-height: 14px;
