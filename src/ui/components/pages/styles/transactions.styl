@import '../../../styles/colors.styl';

.transaction
  display: flex;
  flex-direction: column;
  position: relative;
  height: 100%;
  background: $basic50;

  &-card
    margin: 0 -10px;
    border-radius: 4px;
    box-shadow: $shadowBasic500-opacity40;
    padding: 10px;
    background: $white;

.cardHeader
  display: flex;
  align-items: center;

.cardContent
  padding-left: 58px;
  color: $basic500;

.originAddress
  font-size: 11px;
  display: block;
  margin-top: 14px;
  word-break: break-all;
  text-decoration: none;

.originDescription
  font-size: 11px;

.txBalanceWrapper
    display: flex;
    flex-wrap: wrap;
    justify-content: center;

  .txRow
    width: 100%;
    display: flex;
    padding: 10px 0;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    word-break: break-all;
    text-align: left;
    font-size: 12px;

    &:last-child
      padding-bottom: 20px;

    &.bordered
      border-top: 1px dashed $basic200;
      border-bottom: 1px dashed $basic200;

      &Top
        border-top: 1px dashed $basic200;
        border-bottom: 0 none;

      &Bottom
        border-bottom: 1px dashed $basic200;
        border-top: 0 none;

    & + .txRow
      border-top: 1px dashed $basic200;

    &Description
      padding-bottom: 0px;

    &Description + .txRow
      border-top: 0 none;

  .toggleList
    line-height: 1em;

    .buttonTextCenter
      display: flex;
      align-items: center;

    .arrowDown,
    .arrowUp
      display: inline-block;
      width: 14px;
      height: 14px;
      margin-left: 10px;

    .arrowDown
      background: url(../../../assets/img/arrow-down-14-basic-200.svg) center no-repeat;

    .arrowUp
      background: url(../../../assets/img/arrow-up-14-basic-200.svg) center no-repeat;

  .expandableList
    background-color: $white;
    padding: 16px 10px 0;
    border-radius: 4px;
    border: 1px solid $basic100;
    margin: 0 -10px 10px;

    &Header
      display: flex;
      align-items: center;
      padding: 0 0 16px;
      justify-content: space-between;

    &Title
      flex-grow: 1;

    &Counter
      background: $submit400;
      color: $white;
      height: 20px;
      min-width: 20px;
      padding: 0 6px;
      margin-right: 8px;
      text-align: center;
      line-height: 20px;
      display: block;
      border-radius: 10px;

    .txRow
      background: $basic50;
      border-radius: 4px;
      margin-bottom: 10px;
      width: 100%;
      display: flex;
      padding: 10px;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      word-break: break-all;
      text-align: left;
      font-size: 12px;

    .txRow + .txRow
      border-top: 0 none;

      &Splitted
        display: flex;
        justify-content: space-between;

  .txBalance
    width: 100%;
    margin: 0 auto 36px auto;
    white-space: nowrap;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: 400;
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;

    &.block
      display: block;

    span:first-child
      font-weight: 600;

.txButtonsWrapper
  width: 100%;
  padding: 14px 14px 0 14px;
  background: $white;
  border-top: 1px solid $basic100;
  text-align: center;
  flex-wrap: wrap;

  button
    margin-bottom: 14px;
    max-width: 100%;

.txBigIcon
  width: 80px;
  height: 80px;
  margin: 0 auto 4px auto;

.txFinal
  margin: 0 auto;
  padding: 60px 0 0;
  background: $basic50;
  height: calc(100% - 48px);
  position: relative;
  overflow: auto;

  &FooterWrapper {
    position: sticky;
    z-index: 1000;
    bottom: 0;
  }

  .finalTxContent
    margin: 0 24px;
    min-height: 291px;
    padding-bottom: 14px;

  .finalTxTitle
    padding-left 26px

  .finalTxPlate
    overflow: auto;
    max-height: 240px;
    background: $basic100;
    word-break: break-all;

  .txFooter
    position: sticky;
    bottom: 0;

  &ButtonWrapper
    background: $white;
    border-top: 1px solid $basic100;
    display: flex;
    justify-content: space-between;
    padding: 8px 14px 0;
    width: 100%;

    button
      margin: 0;

    .buttonMargin
      min-width: 12px;

  .finalTxWallet
    margin: 0;
    width: 100%;

    .txWallet
      border-bottom:2px solid red;

  .txInfoRow
    display: flex;
    align-items: center;
    padding: 12px 0 12px 20px;
    border-top: 1px dashed $basic200;
    border-bottom: 1px dashed $basic200;

    .icon
      min-width: 48px;
      height: 48px;
      margin-right: 10px;

    .data
      flex-grow: 1;
      line-height: 20px;

  .closeBtn
    margin: 0;
    background: transparent;
    color: $black;
    border: 1px solid $basic200;
    max-width: none;

    &:hover
      border: 1px solid $black;
      background: transparent;

  .nextBtn
    margin: 0;
    max-width: none;

.txSign
  .infoBlock
    margin: 0 0 24px 0;

  .iconMargin
    margin: 64px auto 4px auto;

  .appName
    max-width: 100%;
    word-break: break-all;

.originWarning
  flex-basis: 100%;
  overflow: auto;
  max-height: 120px;

  div:first-child
    text-decoration: underline;
    padding-bottom: 2px;

.showAllScript
  max-height: none;
  div:first-child
    max-height: none;

.txIcon
  div
    width: 48px;
    height: 48px;
    max-width: 48px;
    max-height: 48px;
    margin: 0 10px 0 0;
  img
    max-width: 48px;
    max-height: 48px;

  &Big
    div
      width: 80px;
      height: 80px;
      max-width: 80px;
      max-height: 80px;
      margin: 4px auto 14px auto;
    img
      max-width: 80px;
      max-height: 80px;

.txScrollBox
  overflow: auto;
  position: relative;
  padding-left: 24px;
  padding-right 24px;
  flex-grow: 1;
  flex-shrink: 999;
