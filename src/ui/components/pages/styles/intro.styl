@import './../../../styles/colors.styl';

.intro
  width: 100%;
  height: 100%;
  position: relative;
  margin: 164px auto 0 auto;
  display: flex;
  flex-direction: column;

  .loader
    position: fixed;
    height: 28px;
    width: 28px;
    top: 50%;
    left: 50%;
    margin-top: 70px;
    transform: translate(-50%, 0);
    background-image: url(../../../assets/img/loader.gif);
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;

.footer
  margin-top: auto;
  display: flex;
  flex-direction: column;

.exportButton
  padding: 8px 48px;
  border-top: 0;

.reset
  margin: 14px;
  width: auto;