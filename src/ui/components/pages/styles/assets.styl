@import '../../../styles/colors.styl';

.assets
  display: flex;
  flex-direction: column;
  position: relative;
  padding: 14px;
  height: 552px;
  background: $basic50;
  padding-bottom: 35px;
  overflow: hidden;

  &::before
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    height: 112px;
    background: linear-gradient(to right, #6b94ff 0%, #1f5af6 100%);

.activeAccount
  position: relative;
  z-index: 1;

.tabs
  margin-top: 24px;

.addAccount
  display: flex;
  justify-content: center;
  padding: 0 14px 0 34px;
  white-space: nowrap;
  height: 32px;
  width: 148px;
  margin: 20px auto 60px auto;
  line-height: 32px;
  cursor: pointer;
  border-radius: 4px;
  background: url(../../../assets/img/add-14-basic-500.svg) 13px center no-repeat;

  &:hover
    background-color: $basic100;

  i
    margin-right: 10px;

.logoMargin
  margin-top: 100px;
  margin-bottom: 44px;

.tabPanels
  flex: 1 1 0;
  overflow: auto;
  padding-top: 8px;
  margin-right: -14px;
  padding-right: 14px;

.notifier
  width: 48px;
  height: 48px;
  box-shadow: 0 4px 6px 0 #9ba6b266;
  background: $white;
  position: absolute;
  bottom: 38px;
  right: 14px;
  border-radius: 50%;
  z-index: 20;
  transition: 0.25s;
  cursor: pointer;
  background: url(../../../assets/img/waitinglist-18-black.svg) center 22px no-repeat $white;

  &:hover
    bottom: 44px;

  .counter
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background: $submit400;
    position: absolute;
    border-radius: 50%;
    min-width: 20px;
    height: 20px;
    color: $white;
    font-style: normal;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 5px;
    font-size: 10px;

.searchInputWrapper {
  position: relative;
}

.searchInput
  background: url(../../../assets/img/search-14-basic200.svg) no-repeat scroll 8px;
  height: 32px;
  padding: 0 32px 0 32px;
  border: none;
  border-radius: unset;
  border-bottom: solid 1px #9BA6B2;

  &:hover
    border: none;
    border-bottom: solid 1px #9BA6B2;

  &:focus
    outline: none;
    border: none;
    border-bottom: 1px solid $submit400;

.searchClose
  background: none;
  position: absolute;
  width: 32px;
  height: 32px;
  right: 0;
  color: #DAE1E9;

  &:hover
    color: #9BA6B2;

.filterBtn
  display: flex;
  justify-content: center;
  align-items: center;
  width: 26px;
  height: 26px;
  border-radius: 2px;
  cursor: pointer;

  &:hover
    background-color: #edf0f4;

.filterBtnIcon
  width: 26px;

.filterTxSelect
  min-width: 96px;
  width: 96px;
  margin: 0 3px 0 6px;
  border-bottom: solid 1px #9BA6B2;
  & > div:first-child
    background: none;
    height: 32px;
    padding: 0 14px 0 8px;
    border: none;
    border-radius: unset;
    &:nth-child(2)
      width: fit-content;
    &:before
      position: absolute;
      right: 0;
      top: 50%;

.filterFirstBtnTooltip
  top: auto;
  right: 30px;
  white-space: nowrap;
  &:after
    right: -2px;
    bottom: auto;

.filterSecondBtnTooltip
  top: auto;
  right: 56px;
  white-space: nowrap;
  &:after
    right: -2px;
    bottom: auto;

.filterTxTooltip
  top: auto;
  right: 156px;
  white-space: nowrap;
  &:after
    right: -2px;
    bottom: auto;