@import './../../../styles/colors.styl';

.root
  margin: 14px auto 0;
  width: 240px;

.importIcon
  display: block;
  margin: auto;

.separator
  display: flex;
  align-items: center;
  gap: 10px;
  margin: 20px 0;

  &:before,
  &:after
    content: "";
    flex: 1 1 0;
    border-bottom: 1px solid $accent50;

.importButtonsItem
  padding: 14px 0;

  &:first-child
    padding-top: 0;

  &:not(:last-child)
    border-bottom: 1px solid $accent50;

  button
    background: url(../../../assets/img/arrow-right-14-basic-200.svg) right center no-repeat;
    text-align: left;

    &:hover
      color: $submit300;
