@import './../../../styles/colors.styl';

.root
  overflow: auto;
  padding: 0 60px;

.importIcon
  display: block;
  margin: auto;
  width: 220px;
  height: 200px;
  object-fit: contain;

.separator
  display: flex;
  align-items: center;
  gap: 10px;
  margin: 20px 0;

  &:before,
  &:after
    content: "";
    flex: 1 1 0;
    border-bottom: 1px solid $accent50;

.importButtonsItem
  display: flex;
  padding: 14px 0;

  &:first-child
    padding-top: 0;

  &:not(:last-child)
    border-bottom: 1px solid $accent50;

  button
    background: url(../../../assets/img/arrow-right-14-basic-200.svg) right center no-repeat;
    text-align: left;

    &:not(:disabled):hover
      color: $submit300;

.importButton {
  align-items: center;
  display: flex;
  flex-grow: 1;
  font-size: 14px;
  gap: 8px;
  justify-content: left;
  padding: 0;
}

.importButton:disabled {
  opacity: 0.5;
}

.importButtonIcon {
  width: 25px;
  height: 28px;
}

.importButtonNote {
  color: var(--color-basic500);
  font-size: 12px;
}