@import './../../../styles/colors.styl';

.root
  margin: 14px auto 0 ;
  width: 240px;

.importIcon
  display: block;
  margin: auto;

.importButtons
  margin-top: 40px;

.importButtonsItem
  padding: 14px 0;

  &:first-child
    padding-top: 0;

  &:not(:last-child)
    border-bottom: 1px solid $accent50;

  button
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 3px;
    height: 42px;
    background: url(../../../assets/img/arrow-right-14-basic-200.svg) right center no-repeat;
    text-align: left;