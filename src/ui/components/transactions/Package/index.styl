@import '../../../styles/colors.styl';
@import '../../pages/styles/transactions.styl';

.dataTransactionCard
  @extends .transaction-card

.cardHeader
  align-items: flex-start;

.dataCard_collapsed
  .origin
    display: none;

.dataTxIcon
  @extends .txIcon

.dataTxScrollBox
  @extends .txScrollBox
  flex-grow: 0;

.cardContent
  padding-left: 0;

.origin
  padding-left: 58px;

.amounts
  div
    div
      margin-bottom: 6px;
      line-height: 1em;
      font-size: 14px;

.packageInfo
  & > div
    & > div
      & > div
        & > div
          margin-bottom: 10px;

.packageTransactionCard
  z-index: 22;
  position: relative;

.packageTxShadow
  position: relative;

  &::before,
  &::after
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
    width: 100%;
    height: 24px;
    content: '';
    display: block;
    border-radius: 4px;
    box-shadow: $shadowBasic500-opacity40;
    padding: 10px;
    background: #fff;

  &::after
    bottom: -6px;
    width: calc(100% - 20px);

  &::before
    bottom: -12px;
    width: calc(100% - 40px);

.toggleList
  line-height: 1em;
  background: $white;
  height: 52px;
  display: flex;
  align-items: center;
  border-radius: 4px;
  border: 1px solid $basic100;
  padding: 12px;
  margin: 0 -10px;

  .icons
    position: relative;
    flex-grow: 1;
    display: flex;
    align-items: center;

    .icon
      left: 0;
      border: 2px solid #fff;
      width: 32px;
      height: 32px;
      top: 50%;
      z-index: 1;
      position: relative;
      border-radius: 50%;
      margin-bottom: 0;
      background-size: cover;
      background-color: $white;

      &:first-child
        z-index: 8;
      &:nth-child(2)
        z-index: 7;
      &:nth-child(3)
        z-index: 6;
      &:nth-child(4)
        z-index: 5;
      &:nth-child(5)
        z-index: 4;
      &:nth-child(6)
        z-index: 3;
      &:nth-child(7)
        z-index: 2;

      &:not(:first-child)
        margin-left: -15px;

  .button
    display: flex;
    justify-content: center;
    flex-grow: 0;

    span
      cursor: pointer;
      display: flex;
      align-items: center;

  .arrowDown,
  .arrowUp
    display: inline-block;
    width: 14px;
    height: 14px;
    margin-left: 10px;

  .arrowDown
    background: url(../../../assets/img/arrow-down-14-basic-200.svg) center no-repeat;

  .arrowUp
    background: url(../../../assets/img/arrow-up-14-basic-200.svg) center no-repeat;
