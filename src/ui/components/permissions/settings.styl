@import '../../styles/colors.styl';

.bottomBtns
  position: absolute;
  width: 100%;
  bottom: 14px;

.amount
  margin-top: 24px;
  position: relative;

.description
  position: relative;
  background-color: $basic50;
  padding: 10px 24px;
  color: $basic500;
  border-radius: 4px;
  margin-top: 10px;

.selectTime
  margin-top: 34px;

.amountInput
  padding-right: 60px;
  display: flex;
  align-items: center;
  font-size: 14px;
  position: relative;

.waves
  color: $submit400;
  position: absolute;
  right: 14px;
  bottom: 14px;
  max-width: 100px;
  overflow: hidden;
  text-overflow: ellipsis;

input[disabled] + .waves
  color: $submit200;

.cancelBtn
  white-space: nowrap;
  display: block;
  border-radius: 4px;
  text-align: center;
  width: 100%;
  max-width: 240px;
  height: 40px;
  margin-top: 14px;
  margin-left: 24px;
  margin-right: 24px;

.btnWrapper
  display: flex;
  justify-content: space-between;

.btnDivider
  width: 0;
  margin: 0 8px;
