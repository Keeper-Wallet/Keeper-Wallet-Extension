.bigWalet
  &.txWallet
    border-bottom: 0 none;
    height: auto;
    padding: 12px 20px;
    border-top: 1px dashed $basic200;

    .avatar
      margin-right: 10px;

    .accountName
      font-size: 14px;
      line-height: 20px;
      height: 20px;

    .accountAddress
      font-size: 11px;
      line-height: 20px;
