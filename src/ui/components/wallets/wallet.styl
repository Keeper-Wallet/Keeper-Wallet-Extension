@import '../../styles/colors.styl';

.content
  padding: 14px;

.accountIcon
  width: 24px;
  height: 24px;
  position: absolute;

.wallet
  width: 100%;
  background: $white;
  display: flex;
  box-shadow: $shadowBasic500-opacity40;
  border-radius: 4px;
  padding: 14px;
  flex-wrap: wrap;
  position: relative;
  z-index: 1;
  margin-bottom: 8px;
  cursor: pointer;
  height: 64px;

  .walletCopyTooltip
    right: 35px;
    white-space: nowrap;
    top: -38px;

  .makeActiveTooltip,
  .wallerShowQrTooltip
    right: 0;
    white-space: nowrap;
    top: -38px;

  .wallerShowQrTooltip
    top: auto;
    bottom: -40px;

    &::after
      top: -2px;
      bottom: auto;

  .balanceWrapper
    justify-content: flex-start;

  .controls
    margin-top: 0;
    position: absolute;
    bottom: 19px;
    right: 14px;
    display: block;
    font-size: 12px;
    width: 26px;
    height: 26px;
    border: 1px dashed $basic200;
    border-radius: 2px;
    z-index: 1;

    &:hover
      border: 1px solid $basic200;

    .accountIcon
      &:hover
        background-color: $basic50;

.activeWallet
  width: 100%;

  .wallet
    height: 112px;
    margin-bottom: 0;
    z-index: 3;

    .accountData
      .accountName
        max-width: 245px;

    .controls
      width: 100%;
      margin-top: 18px;
      position: relative;
      bottom: 0;
      right: 0;
      display: flex;
      border-color: transparent;
      background-color: transparent;

      &:hover
        border-color: transparent;
        background-color: transparent;

      .account-icon
         top: 18px;
         left: 14px;

        &:hover
          background-color: transparent;
          border-color: transparent;

      .accountIcon
        position: absolute;
        padding: 0;
        right: -2px;
        top: -54px;
        width: 30px;
        height: 26px;
        background-color: transparent;
        border-color: transparent;
        margin-right: 0;

        &:hover
          border-color: transparent;
          background-color: transparent

.activeWalletSelected
  &.activeAccountHeader
    width: auto;

.title
  color: $disabled200;

.activeWAlletBtnSeparator
  flex-grow: 1;
  cursor: default;
  background: none transparent;

.activeAccountHeader
  color: $white;
  margin: 0 0 8px 0;
  position: relative;
  z-index: 1;

.inner
  flex-wrap: wrap;

.avatar
  margin-right: 14px;
  display: flex;
  & > div
    border: 0 none;

  img
    margin: 0;

.accountData
  flex-grow: 1;
  text-align: left;

  .accountName
    height: 24px;
    max-width: 220px;
    overflow: hidden;
    text-overflow: ellipsis;

  div
    height: 16px;

// custom wallet design in transactions
.txWallet
  border-radius: 0;
  width: calc(100% + 28px);
  flex-wrap: nowrap;
  box-shadow: none;
  height: 58px;
  margin: -14px -14px 0 -14px;
  cursor: default;
  border-bottom: 1px solid $basic100;

  .avatar
    margin-right: 8px;

  .accountName
    height: 14px;

  .controls
    bottom: 50%;
    width: 18px;
    height: 18px;
    border: 0 none;
    transform: translateY(50%);

    &:hover
      border: 0 none;
      background-color: transparent;

    button
      background: url(../../assets/img/changeaccount-18-basic-500.svg) center no-repeat transparent;
      width: 100%;
      height: 100%;
      border-radius: 0;

      &:hover
        background-color: transparent !important;

