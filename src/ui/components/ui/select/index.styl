@import '../../../styles/colors.styl';

.select
  border: 0;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Roboto;
  position: relative;

.list
  box-shadow: 0 4px 6px 0 $basic500-opacity40;
  background: $white;
  border-radius: 4px;
  margin-top: 2px;
  position: absolute;
  z-index: 50;
  width: 100%;

.listItem
  height: 40px;
  cursor: pointer;
  line-height: 40px;
  padding: 0 14px;
  font-size: 14px;

  &:hover
    background: $basic50;

.selectInput
  position: relative;
  width: 100%;
  border-radius: 4px;
  border: solid 1px $basic100;
  background-color: $white;
  padding: 0 14px;
  cursor: pointer;
  height: 40px;
  display: flex;
  align-items: center;
  font-size: 14px;

  &:before
    content: '';
    position: absolute;
    width: 14px;
    height: 14px;
    background: url(../../../assets/img/select-14-black.svg) center no-repeat;
    right: 14px;
    top: 50%;
    display: block;
    transform: translateY(-50%);
