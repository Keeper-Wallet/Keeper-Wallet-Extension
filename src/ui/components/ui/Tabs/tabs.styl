.tabList
  display: flex;
  border-bottom: 1px solid #ccc;
  padding-left: 0;
  cursor: default;

.tabListItem
  align-items: center;
  display: flex;
  flex: 1;
  justify-content: center;
  list-style: none;
  margin-right: 0.75rem;
  padding-bottom: 12px;
  text-align: center;
  &:last-child
    margin-right: 0;

.tabListActive
  border-bottom: solid #1f5af6;
  border-bottom-width: 2px;
  font-weight: normal;
  padding-bottom: 10px;
