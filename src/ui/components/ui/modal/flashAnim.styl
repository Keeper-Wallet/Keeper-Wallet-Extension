:global .flash_scale_modal-enter
    opacity: 0;
    top: calc(50% + 300px);

:global .flash_scale_modal-enter.flash_scale_modal-enter-active
    opacity: 1;
    top: calc(50% + 255px);
    transition: top 0.4s ease-in-out, opacity 0.3s ease-in-out;

:global .flash_scale_modal-exit
    opacity: 1;
    top: calc(50% + 255px);

:global .flash_scale_modal-exit.flash_scale_modal-exit-active
    opacity: 0;
    top: calc(50% + 300px);
    transition: top 0.4s ease-in-out, opacity 0.3s ease-in-out;


:global .flash_modal-enter
  opacity: 0;

:global .flash_modal-enter.flash_modal-enter-active
  opacity: 1;
  transition: opacity 0.3s ease-in-out;

:global .flash_modal-exit
  opacity: 1;

:global .flash_modal-exit.flash_modal-exit-active
  opacity: 0;
  transition: ease-in-out, opacity 0.3s ease-in-out;

