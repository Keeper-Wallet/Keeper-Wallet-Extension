@import '../../../styles/colors.styl';

textarea
  resize: none;

.input
  position: relative;
  width: 100%;
  height: 40px;
  border-radius: 4px;
  border: solid 1px $basic100;
  background-color: $white;
  padding: 0 14px;
  font-size: 14px;
  transition: .3s;

  &:hover
    border: 1px solid $basic500;

  &:focus
    outline: none;
    border: 1px solid $submit400;

  &.error
  &.error:hover
    border: 1px solid $error400;

  &[disabled] {
    background: $basic50;
    color: $basic500;
    &::-webkit-input-placeholder {color: $basic500;}
    &::-moz-placeholder {color: $basic500;}
    &:-moz-placeholder {color: $basic500;}
    &:-ms-input-placeholder {color: $basic500;}
    &:hover {
      border: 1px solid $basic100;
    }
  }

.textarea
  padding: 14px;
  transition: .3s;

:global .input-like
  display: flex;
  align-items: center;
  box-shadow: $shadowBasic500-opacity40;
  width: 100%;
  height: 42px;
  line-height: 24px;
  padding: 0 14px;
  border-radius: 4px;
  position: relative;
  background: $white;
  transition: .3s;

  &:hover
    box-shadow: 0 4px 6px 0 $basic500-opacity40;

  &.password-input
    padding-left: 42px;
