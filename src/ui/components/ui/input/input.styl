@import '../../../styles/colors.styl';

.input
  position: relative;
  width: 100%;
  height: 40px;
  border-radius: 4px;
  border: solid 1px $basic100;
  background-color: $white;
  padding: 0 14px;
  font-size: 14px;

  &:hover
    border: 1px solid $basic500;

  &:focus
    outline: none;
    border: 1px solid $submit400;

  &.error
  &.error:hover
    border: 1px solid $error400;

.textarea
  padding: 14px;

:global .input-like
  display: flex;
  align-items: center;
  box-shadow: 0 2px 4px 0 #9ba6b266;
  width: 100%;
  height: 42px;
  line-height: 24px;
  padding: 0 14px;
  border-radius: 4px;
  position: relative;
  background: $white;

  &:hover
    box-shadow: 0 4px 6px 0 #9ba6b266;

  &.password-input
    padding-left: 42px;
