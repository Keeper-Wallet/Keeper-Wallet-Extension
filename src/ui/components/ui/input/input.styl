@import '../../../styles/colors.styl';

textarea
  resize: none;

.input
  position: relative;
  width: 100%;
  border-radius: 4px;
  border: solid 1px $basic100;
  background-color: $white;
  padding: 11px 14px;
  font-size: 14px;
  transition: .3s;
  outline: 0 none;

  &:hover
    border: 1px solid $basic500;

  &:focus
    outline: none;
    border: 1px solid $submit400;

  &.error
  &.error:hover
    border: 1px solid $error400;

  &[disabled] {
    background: $basic50;
    color: $basic500;
    &::-webkit-input-placeholder {color: $basic500;}
    &::-moz-placeholder {color: $basic500;}
    &:-moz-placeholder {color: $basic500;}
    &:-ms-input-placeholder {color: $basic500;}
    &:hover {
      border: 1px solid $basic100;
    }
  }

.textarea
  padding: 14px;
  transition: .3s;

:global .input-like
  display: flex;
  align-items: center;
  box-shadow: 0 2px 4px 0 #9ba6b266;
  width: 100%;
  height: 42px;
  line-height: 24px;
  padding: 0 14px;
  border-radius: 4px;
  position: relative;
  background: $white;
  transition: .3s;

  &:hover
    box-shadow: 0 4px 6px 0 #9ba6b266;

  &.password-input
    padding-left: 42px;

input[type="checkbox"]
  -moz-appearance: none;
  -webkit-appearance: none;
  appearance: none;
  display: block;
  content: '';
  width: 22px;
  height: 22px;
  border-radius: 4px;
  margin-right: 14px;
  padding: 0;
  background: url(../../../assets/img/check-12-basic-200.svg) center no-repeat;
  border: 1px solid $basic100;
  flex-shrink: 0;

  &:focus
    border: 1px solid $basic100;

  &:checked
    background: url(../../../assets/img/check-12-white.svg) center no-repeat $submit400;
    border: 1px solid $submit400;

  &:hover
    cursor: pointer;
    border: 1px solid $submit400;

  & + label
    flex-grow: 1;
    cursor: pointer;
