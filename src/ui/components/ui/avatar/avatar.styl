@import '../../../styles/colors.styl';

.avatar
  display: inline-block;

  img
    border-radius: 50%;

.avatarList
  display: flex;
  width: 100%;
  justify-content space-between;
  align-items: center;

  .avatar
    border: 1px solid transparent;
    padding: 4px;
    width: 48px !important;
    height: 48px !important;

    &.selected
      background-color: rgba(31, 90, 246, 0.1);
      border-radius: 2px;
      border: 1px solid $submit400;


.typeIconContainer {
  position: relative;
  top: 2px;
  left: 2px;
}

.typeIcon {
  position: absolute;
  bottom: 0;
  right: 0;
  border-radius: 50%;
  width: 18px;
  height: 18px;
  line-height: 18px;
  font-size: 0.75rem;
  text-align: center;
  vertical-align: center;
  color: #edf0f4;
  background-color: #292f3c;
}
