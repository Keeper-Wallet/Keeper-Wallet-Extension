.avatar
  display: inline-block;

  img
    border-radius: 50%;

.typeIconContainer {
  position: relative;
  top: 2px;
  left: 2px;
}

.typeIcon {
  position: absolute;
  bottom: 0;
  right: 0;
  border-radius: 50%;
  width: 20px;
  height: 20px;
  line-height: 22px;
  text-align: center;
  background-color: #2A303C;
}
