@import '../../../styles/colors.styl';

:global .buttons-wrapper
  display: flex;
  align-items: center;
  justify-content: space-between;

  > button
  .buttons-group
    flex-basis: calc(50% - 7px);

:global .buttons-group
  button:not(.transparent):not(.custom)
    border-radius: 0;

    &:first-child
      border-radius: 4px 0 0 4px;

    &:last-child
      border-radius: 0 4px 4px 0;

.button
  cursor: pointer;
  font-size: 14px;
  font-family: Roboto;
  font-weight: 300;

  &:not(.transparent):not(.custom)
    transition: all .3s;
    white-space: nowrap;
    display: block;
    border-radius: 4px;

  &:not(.transparent):not(.custom):not(.submitTiny)
    width: 100%;
    height: 40px;
    text-align: center;

  &.custom
    text-decoration: none;

  &.default
    background-color: $white;
    border: 1px solid $basic200;
    color: $black;
    font-weight: 300;

    &:hover
      border: 1px solid $black;

  &:focus
    outline: none;

  &.submit,
  &.submitTiny
    background-color: $submit400;
    color: $white;

    &:hover
      background-color: $submit300;

    &.disabled,
    &:disabled,
    &[disabled]
      background-color: $submit200;
      cursor: default;

      &:hover
        background-color: $submit200;

  &.submit-tiny
    height: 32px;

  &.icon
    width: auto;
    display: inline-block;
    padding: 0 16px 0 36px;

  &.transparent
    background-color: transparent;

    &.disabled
      background-color: transparent;

    &:hover
      background-color: transparent;
      text-decoration: none;

    &.fullwidth
      width: 100%;

    &.body1
      font-size: 14px;

  &.warning
    background-color: $error400;
    color: $white;
    font-weight: 300;

    &:hover
      background-color: $error300;

    &.disabled,
    &:disabled,
    &[disabled]
      opacity: 0.5;
      cursor: default;

      &:hover
        opacity: 0.5;

  &.danger
    background-color: $error600;
    color: $white;
    font-weight 300;

    &:hover
      background-color: $error300;

  &.interface
    background-color: $white;
    height: 32px;
    line-height: 32px;
    padding: 0 14px;
    box-shadow: 0 2px 4px 0 #9ba6b266;
    font-weight: 400;
    width: auto;
    margin: 0;
    border: 0.5px solid transparent;
    flex-basis: auto;

    &:not(:last-child)
      margin-right: 14px;

    &:hover
      box-shadow: 0 4px 6px 0 #9ba6b266;

    &.disabled,
    &:disabled,
    &[disabled]
      background-color: transparent;
      border: 0.5px solid $basic200;
      box-shadow: none;

.button.button_loading
  position: relative;
  color: transparent;

  &::after
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -8px;
    margin-left: -8px;
    border: 2px solid $basic100;
    border-right-color: $submit400;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    animation: rotate-spinner 0.6s linear infinite;

@keyframes rotate-spinner
  0%
    transform: rotate(0deg);
  50%
    transform: rotate(180deg);
  100%
    transform: rotate(359deg);
